---
import Layout from '../layouts/Layout.astro';
import Badge from "../components/Badge.astro";
import IconButton from "../components/IconButton.astro";
import GitHubIcon from "../components/GitHubIcon.astro";
import LinkedInIcon from "../components/LinkedInIcon.astro";
---

<Layout title="Welcome to Astro.">
  <main class="w-full mx-auto lg:w-5/6 py-44">
    <section class="text-center mb-24">
      <div class="flex items-center justify-between w-full max-w-7xl mx-auto">
        <!-- Left Side -->
        <div class="flex flex-col items-start">
          <h1 class="text-white text-[96px] font-light">
            <span class="text-[#ece2d0]">Javier Rodriguez</span>
          </h1>
          <!-- Icon Buttons -->
          <div class="flex space-x-4 mt-4">
            <IconButton href="https://github.com/JaviRL7" Icon={GitHubIcon} label="GitHub" />
            <IconButton href="https://www.linkedin.com/in/javierrl" Icon={LinkedInIcon} label="LinkedIn" />
          </div>
        </div>

        <!-- Vertical Separator -->
        <div class="h-[96px] w-[2px] bg-[#ece2d0] mx-8"></div>

        <!-- Right Side -->
        <div class="flex flex-col items-start">
          <span class="text-[96px] font-light text-[#ece2d0] whitespace-nowrap">FULL-STACK</span>
          <span class="text-[96px] font-bold text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 via-[#f4e3c2] to-[#f4e3c2] whitespace-nowrap">DEVELOPER</span>
        </div>
      </div>
      <div class="mt-4 text-center">
        <Badge>DOWNLOAD CV</Badge>
      </div>
    </section>



    <section class="relative flex items-center justify-between h-screen mb-24 bg-[#1e212a]">
      <!-- Imagen con degradado hacia transparencia -->
      <div class="relative w-[70%] h-[50%]">
        <img src="/public/javi1.jpeg" alt="Oscar" class="object-cover h-full w-full rounded-l-lg" 
          style="mask-image: linear-gradient(to right, black 85%, transparent 100%);">
      </div>
    
      <!-- Texto a la derecha de la imagen -->
      <div class="relative z-10 ml-auto text-right p-8 w-[30%]">
        <h2 class="text-white text-8xl font-bold">Javier Rdriguez Lopez</h2>
        <p class="text-[#ece2d0] text-5xl mt-4">Full Stack Developer</p>
      </div>
    </section>



    <section class="mb-24">
      <h1 class="text-white text-5xl font-bold text-center mb-8">
        Sobre mí
      </h1>
      <p class="text-center mx-auto max-w-4xl">Lorem ipsum dolor sit amet consectetur adipisicing elit. Ducimus eveniet sed corrupti optio accusamus. Expedita quasi quisquam non. Explicabo doloremque aliquid atque placeat magni provident, animi delectus voluptatum! Veniam, aut.</p>
    </section>
    <section class="mb-24">
      <h1 class="text-white text-5xl font-bold text-center mb-8">
        Proyectos
      </h1>
      <div class="flex justify-center">
        <img src="https://github.com/JaviRL7/Arena/raw/main/public/vistas/c6.jpeg" alt="Proyecto" class="max-w-full h-auto">
      </div>
    </section>
  </main>
</Layout>

<style>
  main {
    color: white;
    font-size: 20px;
    line-height: 1.6;
    font-family: 'Inter', sans-serif; /* Apply the Inter font */
  }

  /* Sección con imagen y degradado */
  section.relative {
    position: relative;
    height: 100vh;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  /* Estilos para la imagen y el degradado */
  section.relative img {
    object-fit: cover;
    border-radius: 8px 0 0 8px; /* Bordes redondeados en los lados izquierdos */
  }

  section.relative .bg-gradient-to-r {
    background: linear-gradient(to right, rgba(0, 0, 0, 0.7), #1e212a); /* Degradado hacia el color del fondo */
    border-radius: 8px 0 0 8px; /* Aplica bordes redondeados a la capa de degradado */
  }

  /* Texto a la derecha */
  section.relative .text-right {
    z-index: 1;
    color: white;
  }

  /* Ajustes adicionales de estilo */
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translateX(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  .instructions {
    margin-bottom: 2rem;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
    padding: 1.5rem;
    border-radius: 8px;
  }

  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }

  .instructions strong {
    color: rgb(var(--accent-light));
  }

  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }

  /* Icon Button styles */
  .icon-button {
    display: inline-flex;
    align-items: center;
    border: 2px solid #ece2d0;
    border-radius: 8px;
    padding: 8px 12px;
    text-decoration: none;
    color: #ece2d0;
    transition: background-color 0.3s ease;
  }

  .icon-button:hover {
    background-color: rgba(236, 226, 208, 0.1);
  }

  .icon-label {
    margin-left: 8px;
    font-size: 16px;
  }
</style>